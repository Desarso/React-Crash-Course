{
  "manifest_version":2,
  "name": "Canv++",
  "description": "Provide additional front end functionality for canvas website",
  "version":"1.0.0",
  "icons":{
      "30": "images/icon30.png",
      "48": "images/icon48.png",
     "128": "images/icon128.png"
  },
  "browser_action":{
      "default_icon":{
         "30": "images/icon30.png",
         "48": "images/icon48.png"
      }
      ,
      "default_popup":"popup.html"
  },
  "permissions":[
      "storage",
      "tabs",
      "activeTab",
      "webNavigation",
      "webRequest",
      "webRequestBlocking"],
  "content_scripts":[{
  "matches":["https://*/lrccd.instructure.com/*"],
      "js":["content.js"]
     
  }],
  "background":{
      "scripts":["background.js"],
      "persistent": true
  }
  
  
}

